{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/components/*": ["components/*"],
      "@/components/ui/*": ["components/ui/*"],
      "@/lib/*": ["lib/*"],
      "@/lib/utils/*": ["lib/utils/*"],
      "@/hooks/*": ["hooks/*"]
    },
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true
  },
  "include": ["src"]
}
